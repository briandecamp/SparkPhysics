<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Metadata>
		[HostComponent("com.flexmojo.physics.joint.Joint")]
	</fx:Metadata>
	<s:Line xFrom="0" yFrom="0" xTo="{hostComponent.xTo}" yTo="{hostComponent.yTo}">
		<s:stroke>
			<s:SolidColorStroke weight="{getStyle('strokeWeight')}" alpha="{getStyle('strokeAlpha')}" color="{getStyle('strokeColor')}"/>
		</s:stroke>
	</s:Line>
</s:Skin>
