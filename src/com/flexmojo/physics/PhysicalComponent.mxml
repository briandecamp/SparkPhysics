<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableComponent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:Dynamics="Box2D.Dynamics.*"
					  xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Metadata>
		[Style(name="density",type="Number",inherit="yes")]
		[Style(name="friction",type="Number",inherit="yes")]
		[Style(name="restitution",type="Number",inherit="yes")]
		[Style(name="fixedRotation",type="Boolean",inherit="yes")]
		[Style(name="physicsAdapterClass",type="Class",inherit="yes")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import Box2D.Dynamics.b2Body;
			
			public var physicalBody:b2Body;
			
			public function get imperturbable():Boolean {
				return getStyle('density') == 0;
			}
		]]>
	</fx:Script>
</s:SkinnableComponent>
