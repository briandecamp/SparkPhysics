<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Metadata>
		[HostComponent("com.flexmojo.physics.Joint")]
		[Style(name="strokeAlpha", type="Number", inherit="yes")]
		[Style(name="strokeWeight", type="Number", inherit="yes")]
		[Style(name="strokeColor", type="Number", format="Color", inherit="yes")]
	</fx:Metadata>
	<s:Line xFrom="{hostComponent.x}" yFrom="{hostComponent.y}" xTo="{hostComponent.xTo}" yTo="{hostComponent.yTo}">
		<s:stroke>
			<s:SolidColorStroke weight="{getStyle('strokeWeight')}" alpha="{getStyle('strokeAlpha')}" color="{getStyle('strokeColor')}"/>
		</s:stroke>
	</s:Line>
</s:Skin>
